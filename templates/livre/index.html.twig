{% extends 'base.html.twig' %}

{% block title %}YourBook{% endblock %}

{% block body %}
    <h1>Liste des livres</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Isbn</th>
                <th>Archive</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
                <td>{{ livre.id }}</td>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.isbn }}</td>
                <td>{{ livre.archive ? 'Yes' : 'No' }}</td>
                <td><img class="h-25 w-25" src="/images/livres/{{livre.imageName}}" /></td>
                
                {# <td>{{ livre.updatedAt ? livre.updatedAt|date('Y-m-d H:i:s') : '' }}</td> #}
                <td>
                    <a class="btn btn-primary" href="{{ path('app_livre_show', {'id': livre.id}) }}">show</a>
                    <a class="btn btn-warning mt-2" href="{{ path('app_livre_edit', {'id': livre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_livre_new') }}">Create new</a>
{% endblock %}
