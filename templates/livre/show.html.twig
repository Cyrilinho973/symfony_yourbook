{% extends 'base.html.twig' %}

{% block title %}{{ livre.titre }}{% endblock %}

{% block body %}
    <h1>{{ livre.titre }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Isbn</th>
                <td>{{ livre.isbn }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ livre.description }}</td>
            </tr>
            <tr>
                <th>Archive</th>
                <td>{{ livre.archive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ livre.imageName }}</td>
                <td><img class="h-50 w-50" src="/images/livres/{{livre.imageName}}" /></td>
            </tr>
            
            <tr>
                <th>ImageSize</th>
                <td>{{ livre.imageSize }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ livre.updatedAt ? livre.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_livre_index') }}">Back to list</a>

    <a class="btn btn-warning" href="{{ path('app_livre_edit', {'id': livre.id}) }}">Edit</a>

    {{ include('livre/_delete_form.html.twig') }}
{% endblock %}
